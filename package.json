{
  "name": "md-crafter",
  "version": "0.1.0-beta-1",
  "description": "Cloud-synced markdown and MDX editor",
  "homepage": "https://github.com/thtmnisamnstr/md-crafter",
  "author": {
    "name": "Gavin Johnson",
    "email": "gavinj1984@gmail.com"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:web\"",
    "dev:server": "npm run dev -w @md-crafter/server",
    "dev:web": "npm run dev -w @md-crafter/web",
    "dev:desktop": "npm run build:shared && npm run dev -w @md-crafter/desktop",
    "build": "npm run build:shared && npm run build:server && npm run build:web",
    "build:shared": "npm run build -w @md-crafter/shared",
    "build:server": "npm run build -w @md-crafter/server",
    "build:web": "npm run build -w @md-crafter/web",
    "build:desktop": "npm run build && npm run build -w @md-crafter/desktop",
    "build:all": "npm run build && npm run build -w @md-crafter/desktop",
    "package:desktop": "npm run build:desktop && npm run package -w @md-crafter/desktop",
    "package:desktop:mac": "npm run build:desktop && npm run package:mac -w @md-crafter/desktop",
    "package:desktop:win": "npm run build:desktop && npm run package:win -w @md-crafter/desktop",
    "package:desktop:linux": "npm run build:desktop && npm run package:linux -w @md-crafter/desktop",
    "lint": "eslint packages/*/src --ext .ts,.tsx",
    "format": "prettier --write \"packages/*/src/**/*.{ts,tsx,css}\"",
    "clean": "rimraf packages/*/dist packages/*/node_modules node_modules",
    "clean:dist": "rimraf packages/*/dist",
    "verify-builds": "bash scripts/verify-builds.sh",
    "pre-push": "bash scripts/pre-push-check.sh",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:shared": "vitest run packages/shared",
    "test:server": "vitest run packages/server",
    "test:web": "vitest run packages/web",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:desktop": "npm run build:desktop && bash scripts/test-desktop-build.sh"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitest/coverage-v8": "^4.0.15",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "happy-dom": "^20.0.11",
    "jsdom": "^27.2.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.2",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  }
}
