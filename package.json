{
  "name": "md-edit",
  "version": "1.0.0",
  "description": "Cloud-synced markdown and code editor with real-time collaboration",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:web\"",
    "dev:server": "npm run dev -w @md-edit/server",
    "dev:web": "npm run dev -w @md-edit/web",
    "dev:desktop": "npm run dev -w @md-edit/desktop",
    "build": "npm run build -w @md-edit/shared && npm run build -w @md-edit/server && npm run build -w @md-edit/web",
    "build:desktop": "npm run build -w @md-edit/desktop",
    "lint": "eslint packages/*/src --ext .ts,.tsx",
    "format": "prettier --write \"packages/*/src/**/*.{ts,tsx,css}\"",
    "clean": "rimraf packages/*/dist packages/*/node_modules node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

