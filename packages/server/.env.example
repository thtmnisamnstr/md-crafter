# MD-Edit Server Configuration
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Database Configuration
DB_FILENAME=./data/md-edit.json

# For production with PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/mdeditor

# For production with MySQL:
# DATABASE_URL=mysql://username:password@localhost:3306/mdeditor

# Document Versioning
MAX_DOCUMENT_VERSIONS=50

# Logging
LOG_LEVEL=info
